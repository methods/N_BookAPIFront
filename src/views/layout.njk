{%- from "dist/govuk/components/header/macro.njk" import govukHeader -%}
{%- from "dist/govuk/components/footer/macro.njk" import govukFooter -%}

<!DOCTYPE html>
<html lang="en" class="govuk-template">
  <head>
    <meta charset="utf-8">
    <title>{{ pageTitle }} - GOV.UK</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
    <meta name="theme-color" content="#0b0c0c">

    <link rel="stylesheet" href="/govuk/govuk/govuk-frontend.min.css">
  </head>
  <body class="govuk-template__body">
    <script>document.body.className = ((document.body.className) ? document.body.className + ' js-enabled' : 'js-enabled');</script>

    <header class="govuk-header" role="banner" data-module="govuk-header">
      {{ govukHeader({
        "homepageUrl": "/",
        "serviceName": "Book Service",
        "serviceUrl": "/"
      }) }}
    </header>

    <div class="govuk-width-container">
      <main class="govuk-main-wrapper" id="main-content" role="main">
        {% block content %}{% endblock %}
      </main>
    </div>

    {{ govukFooter({}) }}

  </body>
</html>